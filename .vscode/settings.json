{
	"editor.cursorBlinking": "smooth",
	"editor.fontSize": 16,
	"editor.lineHeight": 24,
	"editor.formatOnType": true,
	"editor.letterSpacing": 0.5,
	"editor.tabSize": 2,
	"editor.wordWrap": "off",
	"files.trimTrailingWhitespace": true,
	"prettier.printWidth": 100,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 2,
	"files.exclude": {
		"node_modules/": true,
		".idea/" : true,
		".vscode/": true
	}
}
